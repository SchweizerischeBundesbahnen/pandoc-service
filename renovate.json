{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>SchweizerischeBundesbahnen/casc-renovate-preset-polarion-docker"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile$"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "jgm/pandoc",
      "matchStrings": [
        "PANDOC_VERSION=(?<currentValue>.*)"
      ]
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchDatasources": [
        "github-releases"
      ],
      "matchDepNames": [
        "jgm/pandoc"
      ],
      "semanticCommitType": "feat",
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchDatasources": [
        "github-releases"
      ],
      "matchDepNames": [
        "jgm/pandoc"
      ],
      "semanticCommitType": "feat!",
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
